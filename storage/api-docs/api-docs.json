{
    "openapi": "3.0.0",
    "info": {
        "title": "Time control API",
        "description": "Este API permite gestionar y contabilizar el tiempo que dedicamos a proyectos",
        "contact": {
            "name": "Soporte API",
            "url": "https://escuela.it/contacto",
            "email": "contacto@escuela.it"
        },
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/license/mit/"
        },
        "version": "0.0"
    },
    "paths": {
        "/api/auth/login": {
            "post": {
                "tags": [
                    "auth"
                ],
                "summary": "Login de usuarios",
                "description": "Ruta para realizar el login de un usuario existente. Verifica el usuario y devuelve el token",
                "operationId": "loginUser",
                "requestBody": {
                    "description": "Credenciales de usuario",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "john@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "secret1234"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "$ref": "#/components/responses/AuthResponse"
                    },
                    "401": {
                        "description": "Error de validación de la entrada de datos o usuario desconocido"
                    }
                }
            }
        },
        "/api/auth/logout": {
            "get": {
                "tags": [
                    "auth"
                ],
                "summary": "Cerrar la sesión de un usuario",
                "description": "Endpoint hacer el logout, que se encarga de desactivar y borrar el token de acceso",
                "operationId": "logoutUser",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/acceptJsonHeader"
                    },
                    {
                        "$ref": "#/components/parameters/requestedWith"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Deslogueado exitosamente"
                    },
                    "401": {
                        "description": "No autorizado"
                    }
                },
                "security": [
                    {
                        "BearerAuth": []
                    }
                ]
            }
        },
        "/api/auth/register": {
            "post": {
                "tags": [
                    "auth"
                ],
                "summary": "Registro de usuarios",
                "description": "Ruta para realizar el alta de un usuario. Crea el usuario y devuelve el token",
                "operationId": "createUser",
                "requestBody": {
                    "description": "Objeto de usuario a crear",
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "$ref": "#/components/schemas/User"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "$ref": "#/components/responses/AuthResponse"
                    },
                    "400": {
                        "$ref": "#/components/responses/ValidationErrorResponse"
                    }
                }
            }
        },
        "/api/customers": {
            "get": {
                "tags": [
                    "customer"
                ],
                "summary": "Obtener la lista de los clientes de un usuario",
                "description": "Devuelve un array de objetos Customer que haya dado de alta un usuario",
                "operationId": "getUserCustomers",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/acceptJsonHeader"
                    },
                    {
                        "$ref": "#/components/parameters/requestedWith"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Lista de clientes enviada con éxito",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "description": "Mensaje de respuesta",
                                            "type": "string"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Customer"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "$ref": "#/components/responses/UnauthenticatedResponse"
                    },
                    "500": {
                        "description": "Error de servidor"
                    }
                },
                "security": [
                    {
                        "BearerAuth": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "customer"
                ],
                "summary": "Obtener la lista de los clientes de un usuario",
                "description": "Devuelve un array de objetos Customer que haya dado de alta un usuario",
                "operationId": "createCustomer",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/acceptJsonHeader"
                    },
                    {
                        "$ref": "#/components/parameters/requestedWith"
                    }
                ],
                "requestBody": {
                    "description": "Objeto de cliente a crear",
                    "required": true,
                    "content": {
                        "application/x-www-form-urlencoded": {
                            "schema": {
                                "$ref": "#/components/schemas/Customer"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "El cliente se ha creado con éxito",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "description": "Mensaje de respuesta",
                                            "type": "string"
                                        },
                                        "data": {
                                            "$ref": "#/components/schemas/Customer"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "$ref": "#/components/responses/ValidationErrorResponse"
                    },
                    "403": {
                        "$ref": "#/components/responses/NotAuthorizedResponse"
                    },
                    "401": {
                        "$ref": "#/components/responses/UnauthenticatedResponse"
                    },
                    "500": {
                        "description": "Error de servidor"
                    }
                },
                "security": [
                    {
                        "BearerAuth": []
                    }
                ]
            }
        },
        "/api/customers/{id}": {
            "get": {
                "tags": [
                    "customer"
                ],
                "summary": "Obtener un cliente concreto",
                "description": "Obtener un objeto de un cliente que corresponda con un identificador dado",
                "operationId": "getCustomer",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/CustomerIdParameter"
                    },
                    {
                        "$ref": "#/components/parameters/acceptJsonHeader"
                    },
                    {
                        "$ref": "#/components/parameters/requestedWith"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Operación exitosa",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "description": "Mensaje de respuesta",
                                            "type": "string"
                                        },
                                        "data": {
                                            "$ref": "#/components/schemas/Customer"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "$ref": "#/components/responses/NotFoundResponse"
                    },
                    "403": {
                        "$ref": "#/components/responses/NotAuthorizedResponse"
                    },
                    "401": {
                        "$ref": "#/components/responses/UnauthenticatedResponse"
                    },
                    "500": {
                        "description": "Error de servidor"
                    }
                },
                "security": [
                    {
                        "BearerAuth": []
                    }
                ]
            },
            "put": {
                "tags": [
                    "customer"
                ],
                "summary": "Obtener un cliente concreto",
                "description": "Obtener un objeto de un cliente que corresponda con un identificador dado",
                "operationId": "updateCustomer",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/CustomerIdParameter"
                    },
                    {
                        "$ref": "#/components/parameters/acceptJsonHeader"
                    },
                    {
                        "$ref": "#/components/parameters/requestedWith"
                    }
                ],
                "requestBody": {
                    "description": "Datos del cliente a actualizar",
                    "required": true,
                    "content": {
                        "application/x-www-form-urlencoded": {
                            "schema": {
                                "$ref": "#/components/schemas/Customer"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Operación exitosa",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "description": "Mensaje de respuesta",
                                            "type": "string"
                                        },
                                        "data": {
                                            "$ref": "#/components/schemas/Customer"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "$ref": "#/components/responses/ValidationErrorResponse"
                    },
                    "404": {
                        "$ref": "#/components/responses/NotFoundResponse"
                    },
                    "403": {
                        "$ref": "#/components/responses/NotAuthorizedResponse"
                    },
                    "401": {
                        "$ref": "#/components/responses/UnauthenticatedResponse"
                    },
                    "500": {
                        "description": "Error de servidor"
                    }
                },
                "security": [
                    {
                        "BearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "Customer": {
                "required": [
                    "name"
                ],
                "properties": {
                    "id": {
                        "description": "ID único del cliente. Al crear o actualizar el usuario no se usará el identificador",
                        "type": "integer"
                    },
                    "name": {
                        "description": "Nombre del cliente",
                        "type": "string"
                    },
                    "email": {
                        "description": "Correo electrónico del cliente",
                        "type": "string",
                        "format": "email"
                    },
                    "telephone": {
                        "description": "Teléfono de contacto del cliente",
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "User": {
                "required": [
                    "name",
                    "email",
                    "password"
                ],
                "properties": {
                    "id": {
                        "description": "ID único del usuario. Al crear el usuario no se debe enviar el identificador, pues se generará en la creación.",
                        "type": "integer"
                    },
                    "name": {
                        "description": "Nombre del usuario",
                        "type": "string"
                    },
                    "email": {
                        "description": "Correo electrónico del usuario",
                        "type": "string",
                        "format": "email"
                    },
                    "password": {
                        "description": "Clave del usuario",
                        "type": "string"
                    }
                },
                "type": "object"
            }
        },
        "responses": {
            "AuthResponse": {
                "description": "Usuario autenticado, se devuelve el token",
                "content": {
                    "application/json": {
                        "schema": {
                            "properties": {
                                "message": {
                                    "description": "Mensaje de respuesta",
                                    "type": "string"
                                },
                                "token": {
                                    "description": "Token de autenticación",
                                    "type": "string"
                                }
                            },
                            "type": "object"
                        }
                    }
                }
            },
            "NotAuthorizedResponse": {
                "description": "Respuesta el usuario no está autorizado a realizar esta acción",
                "content": {
                    "application/json": {
                        "schema": {
                            "properties": {
                                "message": {
                                    "description": "NotAuthorizedResponse",
                                    "type": "string"
                                }
                            },
                            "type": "object"
                        }
                    }
                }
            },
            "NotFoundResponse": {
                "description": "Respuesta el usuario cuando no existe este recurso",
                "content": {
                    "application/json": {
                        "schema": {
                            "properties": {
                                "message": {
                                    "description": "NotFoundResponse",
                                    "type": "string"
                                }
                            },
                            "type": "object"
                        }
                    }
                }
            },
            "UnauthenticatedResponse": {
                "description": "Respuesta cuando el endpoint necesita autenticación y no se ha podio verificar al usuario",
                "content": {
                    "application/json": {
                        "schema": {
                            "properties": {
                                "message": {
                                    "description": "Unauthenticated",
                                    "type": "string"
                                }
                            },
                            "type": "object"
                        }
                    }
                }
            },
            "ValidationErrorResponse": {
                "description": "Respuesta cuando se ha encontrado un error de validación",
                "content": {
                    "application/json": {
                        "schema": {
                            "properties": {
                                "message": {
                                    "description": "Validation error message",
                                    "type": "string"
                                },
                                "errors": {
                                    "description": "Detalles específicos sobre los errores de validación.",
                                    "type": "object",
                                    "additionalProperties": {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        }
                                    }
                                }
                            },
                            "type": "object"
                        }
                    }
                }
            }
        },
        "parameters": {
            "acceptJsonHeader": {
                "name": "Accept",
                "in": "header",
                "description": "Header to indicate the response format, should be application/json",
                "required": true,
                "schema": {
                    "type": "string",
                    "default": "application/json"
                }
            },
            "requestedWith": {
                "name": "X-Requested-With",
                "in": "header",
                "description": "Header to indicate the requested with parameter",
                "required": true,
                "schema": {
                    "type": "string",
                    "default": "XMLHttpRequest"
                }
            },
            "CustomerIdParameter": {
                "name": "id",
                "in": "path",
                "description": "ID del cliente que se desea obtener",
                "required": true,
                "schema": {
                    "type": "integer"
                }
            }
        },
        "securitySchemes": {
            "BearerAuth": {
                "type": "http",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    }
}